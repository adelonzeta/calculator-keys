{
  "name": "calculator-scripts",
  "version": "1.0.0",
  "description": "Calculator Javascript Library.",
  "author": "Adelon Zeta <hello@adelonzeta.com>",
  "repository": "git+https://github.com/adelonzeta/calculator-scripts.git",
  "bugs": "https://github.com/adelonzeta/calculator-scripts/issues",
  "homepage": "https://github.com/adelonzeta/calculator-scripts#readme",
  "license": "ISC",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "keywords": [
    "scientific",
    "calculator",
    "typescript",
    "javascript",
    "library"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "/src/.*\\.test\\.ts$"
  },
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "jest": "^24.7.1",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.2"
  }
}
